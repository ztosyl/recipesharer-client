{{#each recipes as |recipe|}}
  <section class="col-5" data-id="{{recipe._id}}">
    <h3 data-id="{{recipe._id}}">{{recipe.title}}</h3>
    <h6>{{recipe.meal}} Recipe</h6>
    <h6><strong>Difficulty:</strong> {{recipe.difficulty}}</h6>
    <h6><strong>Rating:</strong> {{average recipe.ratings}}</h6>
    <button data-id="{{recipe._id}}" class="btn btn-secondary show-full">Show full</button>
  </section>
{{/each}}
