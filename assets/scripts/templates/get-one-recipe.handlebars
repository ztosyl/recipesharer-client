<section class='col-11' data-id="{{recipe.recipe._id}}">
  <h3>{{recipe.recipe.title}}</h3>
  <h6>{{recipe.recipe.meal}} Recipe</h6>
  <h6><strong>Difficulty:</strong> {{recipe.recipe.difficulty}}</h6>
  <h6><strong>Rating:</strong> {{average recipe.recipe.ratings}}</h6>
  <h6>Ingredients:</h6>
  <ol>{{#each recipe.recipe.ingredients as |ingredient|}}
  <li>{{ingredient}}</li>
  {{/each}}</ol>
  <h6>Steps:</h6>
  <ol>{{#each recipe.recipe.steps as |step|}}
  <li>{{step}}</li>
  {{/each}}</ol>
  <button data-id="{{recipe.recipe._id}}" class="hidden-buttons show-update-recipe btn btn-maroon">Update</button>
  <button data-id="{{recipe.recipe._id}}" class="hidden-buttons delete-recipe-prompt btn btn-danger">Delete</button>
</section>
<section class="col-5">
<h3>Comments:</h3>
{{#if isComment}}
{{#each recipe.recipe.comments as |comment|}}
<hr>
<h4>{{comment.title}}</h4>
<p>{{comment.body}}</p>
<hr>
{{/each}}
{{else}}
<hr>
<h5>No comments yet!</h5>
<hr>
{{/if}}
</section>
<section data-id="{{recipe.recipe._id}}" class="comment-form-sect col-3">
  <form data-id="{{recipe.recipe._id}}" class="comment-form">
    <label>Like it? Hate it? Comment here:</label>
    <input class="comment-input comment-title" type="text" name="comment[title]" required placeholder="Title">
    <textarea class="comment-input comment-body" name="comment[body]" required placeholder="Comment"></textarea>
    <button type="submit" class="btn btn-secondary">Post comment</button>
  </form>
</section>
<section data-id="{{recipe.recipe._id}}" class="comment-form-sect col-3">
  <label>Add a rating:</label> <br>
  <span data-id=1 class="star">&#9734;</span>
  <span data-id=2 class="star">&#9734;</span>
  <span data-id=3 class="star">&#9734;</span>
  <span data-id=4 class="star">&#9734;</span>
  <span data-id=5 class="star">&#9734;</span> <br>
  <form data-id="{{recipe.recipe._id}}" class="ratings-form">
  <input type="text" name="rating[rating]" class="rating-input">
  <button class="btn btn-secondary post-ratings">Post rating</button>
  </form>
</section>
